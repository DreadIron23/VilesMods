<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="PlantDef">
		<defName>PepperPlant</defName>
		<label>Pepper Plant</label>
		<description>Hot Peppers are useful for making spicy meals, but don't pack a lot of calories.</description>
		<statBases>
			<Beauty>1</Beauty>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/PlantPepper_Harvest</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<maxMeshCount>4</maxMeshCount>
			<sowResearchPrerequisites>
				<li>Food_Plants_A2</li>
			</sowResearchPrerequisites>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<immatureGraphicPath>Things/Plant/PlantPepper</immatureGraphicPath>
			<sowMinSkill>5</sowMinSkill>
			<harvestedThingDef>RawPeppers</harvestedThingDef>
			<harvestYield>10</harvestYield>
			<topWindExposure>0.1</topWindExposure>
			<growDays>5</growDays>
			<fertilitySensitivity>0.8</fertilitySensitivity>
			<fertilityMin>1.0</fertilityMin>
			<visualSizeRange>
				<min>0.2</min>
				<max>1.0</max>
			</visualSizeRange>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>

</Defs>