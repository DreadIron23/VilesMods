                    </ingredients>
				</value>
			</li>
            <li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName="makemedicine"]/fixedIngredientFilter</xpath>
				<value>
					<fixedIngredientFilter>
                        <thingDefs>
                            <li>IsopropylAlcohol</li>
