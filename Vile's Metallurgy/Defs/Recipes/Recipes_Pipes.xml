<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	

	
	<RecipeDef>
		<defName>Make_PipeSectionBasic_Cast</defName>
		<label>Cast plumbing components from metal</label>
		<description>Cast pipes and fittings for sewage and drinking water (hopefully seperately). Produces 16.</description>
		<jobString>Assembling components.</jobString>
		<workAmount>1200</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>MakeWoodPlanks_Electric</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<recipeUsers>
			<li>Foundry</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>CastBar</li>
					</categories>
				</filter>
				<count>40</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>CastBar</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<PipeSection>16</PipeSection>
		</products>
		<skillRequirements>
			<Crafting>3</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>
	
	<RecipeDef>
		<defName>Make_PipeSectionBasic_Forged</defName>
		<label>forge plumbing components</label>
		<description>Forge pipes and fittings for sewage and drinking water (hopefully seperately). Produces 4.</description>
		<jobString>Assembling components.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>SmithingSpeed</workSpeedStat>
		<effectWorking>MakeWoodPlanks_Electric</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<recipeUsers>
			<li>FueledSmithy</li>
			<li>Finery</li>
			<li>ElectricSmithy</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Metallic</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Metallic</li>
			</categories>
			<disallowedThingDefs>
				<li>CastIron</li>
			</disallowedThingDefs>	
		</fixedIngredientFilter>
		<products>
			<PipeSection>4</PipeSection>
		</products>
		<skillRequirements>
			<Crafting>3</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>
	
