				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SoftClay</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Coke</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BlisterSteel</li>
				<li>FluxPowder</li>
				<li>Coke</li>
