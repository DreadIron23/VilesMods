<Defs>
	<RecipeDef>
		<defName>Cast_Handaxe_Batch</defName>
		<label>Cast Handaxe</label>
		<description>Batch-cast handaxes (x3)</description>
		<jobString>Casting handaxes from metal.</jobString>
		<workAmount>7000</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smith</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<recipeUsers>
			<li>Foundry</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>CastBar</li>
					</categories>
				</filter>
				<count>105</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>CastBar</li>
			</categories>
			<disallowedThingDefs>
				<li>CastIron</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
		<products>
			<TFJ_Tool_Woodcutting_Handaxe>3</TFJ_Tool_Woodcutting_Handaxe>    
		</products>
		<skillRequirements>
			<Crafting>3</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<unfinishedThingDef>UnfinishedMetallicApparel</unfinishedThingDef>
			<!--<researchPrerequisite>ResearchCrucibleFoundry</researchPrerequisite>-->
	</RecipeDef>
	
