<RecipeDef Class="UniversalFermenterSK.RecipeDef_UF">
		<defName>ClayPot_process</defName>
		<label>fire clay pot</label>
		<description>Bake a Clay Pot for food storage. Fire it again after glazing for even better preservation. Takes 24 hours.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ClayPotWetUnglazed</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ClayPotWetUnglazed</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<ClayPot>1</ClayPot>
		</products>
		<usesTemperature>false</usesTemperature>
		<processDays>1</processDays>
		<recipeUsers>
			<li>Kiln</li>
		</recipeUsers>
		<researchPrerequisite>Ceramics_A1</researchPrerequisite>
	</RecipeDef>
