<!-- REDWOOD -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="PlantTreeRedwood"]/plant/visualSizeRange</xpath>
		<value>
			<visualSizeRange Inherit="False">
				<min>5</min>
				<max>8</max>
			</visualSizeRange>
		</value>
    </Operation>

<!-- PINE -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_TreePine"]/plant/visualSizeRange</xpath>
		<value>
			<visualSizeRange Inherit="False">
				<min>1.5</min>
				<max>5.0</max>
			</visualSizeRange>
		</value>
    </Operation>
	
	

</Patch>
		
		