<Patch>



	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Plant_TreeBamboo"]/graphicData/texPath</xpath>
		<value>
			<texPath>Things/Trees/BambooStalk</texPath>
