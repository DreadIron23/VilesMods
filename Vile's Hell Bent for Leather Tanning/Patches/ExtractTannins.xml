<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Wood You Please</li>
	</mods>
	<nomatch Class="PatchOperationSequence">
	<success>Always</success>
		<operations>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<RecipeDef>
						<defName>ExtractTreeBark_Hand</defName>
						<label>extract bark for tannins</label>
						<description>Remove tree bark to be used for tannins. The rest is kindling, though much is wasted.</description>
						<jobString>Removing tree bark.</jobString>
						<workAmount>900</workAmount>
						<workSpeedStat>SmithingSpeed</workSpeedStat>
						<effectWorking>MakeWoodPlanks_Hand</effectWorking>
						<soundWorking>Sawing_Wood_Sound</soundWorking>
						<ingredients>
							<li>
								<filter>
									<thingDefs>
										<li>WoodLog</li>
										<li>RedWoodLog</li>
									</thingDefs>
								</filter>
								<count>10</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<thingDefs>
								<li>WoodLog</li>
								<li>RedWoodLog</li>
							</thingDefs>
						</fixedIngredientFilter>
						<products>
							<TreeBark>20</TreeBark>
							<Kindling>5</Kindling>
						</products>
						<skillRequirements>
							<Crafting>2</Crafting>
						</skillRequirements>
						<workSkill>Crafting</workSkill>
						<workSkillLearnFactor>0.8</workSkillLearnFactor>
						<recipeUsers>
							<li>TableSawmillHand</li>
							<li>TableSawmillElectric</li>
						</recipeUsers>
					</RecipeDef>
				</value>
			</li>
			
		</operations>
		</nomatch>
    </Operation>	
	
	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Wood You Please</li>
	</mods>
	<match Class="PatchOperationSequence">
	<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<RecipeDef>
						<defName>ExtractTreeBark_Hand</defName>
						<label>extract bark for tannins</label>
						<description>Remove tree bark to be used for tannins. The rest is kindling, though much is wasted.</description>
						<jobString>Removing tree bark.</jobString>
						<workAmount>900</workAmount>
						<workSpeedStat>SmithingSpeed</workSpeedStat>
						<effectWorking>MakeWoodPlanks_Hand</effectWorking>
						<soundWorking>Sawing_Wood_Sound</soundWorking>
						<ingredients>
							<li>
								<filter>
									<categories>
										<li>Ultrahardwoods</li>
										<li>Hardwoods</li>
										<li>Softwoods</li>
									</categories>
								</filter>
								<count>2</count>
							</li>
						</ingredients>
						<fixedIngredientFilter>
							<categories>
								<li>Ultrahardwoods</li>
								<li>Hardwoods</li>
								<li>Softwoods</li>
							</categories>
						</fixedIngredientFilter>
						<products>
							<TreeBark>20</TreeBark>
							<Kindling>5</Kindling>
							<WoodLog>5</WoodLog>
						</products>
						<skillRequirements>
							<Crafting>2</Crafting>
						</skillRequirements>
						<workSkill>Crafting</workSkill>
						<workSkillLearnFactor>0.8</workSkillLearnFactor>
						<recipeUsers>
							<li>TableSawmillHand</li>
							<li>TableSawmillElectric</li>
						</recipeUsers>
					</RecipeDef>
				</value>
			</li>
		</operations>
		</match>
    </Operation>	
	
	
